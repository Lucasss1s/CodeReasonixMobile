<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101020"
    android:padding="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtNombreBoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Desafío"
            android:textColor="#00bfa6"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imgBoss"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/txtNombreBoss"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Imagen del boss" />

        <ProgressBar
            android:id="@+id/hpBarDetalle"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:progressDrawable="@android:drawable/progress_horizontal"
            app:layout_constraintTop_toBottomOf="@id/imgBoss"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtHpBoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HP: 100/100"
            android:textColor="#FFF"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/hpBarDetalle"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtRecompensa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recompensa: 50 XP • 10 monedas"
            android:textColor="#00bfa6"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/txtHpBoss"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btnInscribirme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Inscribirme"
            android:backgroundTint="#00bfa6"
            android:textColor="#111"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/txtRecompensa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txtPreguntasTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preguntas asignadas"
            android:textColor="#00bfa6"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/btnInscribirme"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPreguntas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/txtPreguntasTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
