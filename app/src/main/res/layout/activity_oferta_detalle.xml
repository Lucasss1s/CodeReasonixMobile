<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111827"
    android:padding="16dp"
    tools:context=".OfertaDetalleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTituloDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título de la oferta"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#F9FAFB"
            android:layout_marginBottom="4dp"
            android:maxLines="3"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/txtEmpresaDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la empresa"
            android:textColor="#A5B4FC"
            android:textSize="15sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/txtSectorDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sector"
            android:textColor="#9CA3AF"
            android:textSize="13sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtUbicacionDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación"
            android:textColor="#D1D5DB"
            android:textSize="14sp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/txtFechaDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de publicación"
            android:textColor="#9CA3AF"
            android:textSize="12sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textColor="#E5E7EB"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtDescripcionDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto de la descripción de la oferta..."
            android:textColor="#D1D5DB"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requisitos"
            android:textColor="#E5E7EB"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtRequisitosDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de requisitos..."
            android:textColor="#D1D5DB"
            android:textSize="14sp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnPostularme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Postularme"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#111827"
            android:backgroundTint="#00BFA6"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>
