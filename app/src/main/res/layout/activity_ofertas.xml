<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101020"
    android:fitsSystemWindows="true"
    tools:context=".OfertasActivity">

    <include
        android:id="@+id/includeTopBar"
        layout="@layout/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/layoutContenidoOfertas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/includeTopBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <TextView
            android:id="@+id/txtTituloPantallaOfertas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ofertas laborales"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#00bfa6"
            android:gravity="center"
            android:textAlignment="center"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/txtEmptyOfertas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No hay ofertas disponibles por el momento."
            android:textColor="#9CA3AF"
            android:textSize="14sp"
            android:gravity="center"
            android:visibility="gone"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/edtBuscarEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar por empresa..."
            android:background="#15152A"
            android:padding="12dp"
            android:textColor="#E5E7EB"
            android:textColorHint="#6B7280"
            android:inputType="text"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerOfertas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            tools:listitem="@layout/item_oferta" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressOfertas"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/layoutContenidoOfertas"
        app:layout_constraintBottom_toBottomOf="@id/layoutContenidoOfertas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
