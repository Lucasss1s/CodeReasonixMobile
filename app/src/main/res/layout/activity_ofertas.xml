<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111827"
    android:padding="16dp"
    tools:context=".OfertasActivity">

    <TextView
        android:id="@+id/txtTituloPantallaOfertas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ofertas laborales"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#E5E7EB"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtEmptyOfertas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No hay ofertas disponibles por el momento."
        android:textColor="#9CA3AF"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtTituloPantallaOfertas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerOfertas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtEmptyOfertas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_oferta" />

    <ProgressBar
        android:id="@+id/progressOfertas"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
