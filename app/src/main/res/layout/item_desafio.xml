<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1a1a2e"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:clipToOutline="true">

    <ImageView
        android:id="@+id/imgBossThumb"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:scaleType="centerCrop"
        android:background="#101426"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del desafío"
        android:textColor="#00bfa6"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/imgBossThumb"
        app:layout_constraintTop_toTopOf="@id/imgBossThumb"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descripción breve del desafío, que puede ser más larga y debe verse completa."
        android:textColor="#cccccc"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/imgBossThumb"
        app:layout_constraintTop_toBottomOf="@id/txtNombre"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/layoutEtiquetas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/txtDescripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDescripcion">

        <TextView
            android:id="@+id/txtDificultad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intermedio"
            android:textColor="#00bfa6"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txtLenguaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java"
            android:textColor="#00bfa6"
            android:textSize="13sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/hpBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/layoutEtiquetas"
        app:layout_constraintStart_toStartOf="@id/txtDescripcion"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtHp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HP: 700 / 1000"
        android:textColor="#bbb"
        android:textSize="13sp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/hpBar"
        app:layout_constraintStart_toStartOf="@id/txtDescripcion" />

</androidx.constraintlayout.widget.ConstraintLayout>
