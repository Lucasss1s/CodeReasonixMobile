<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="#1F2937">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/txtTituloOferta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título de la oferta"
            android:textColor="#F9FAFB"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/txtEmpresaOferta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empresa"
            android:textColor="#A5B4FC"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/txtUbicacionOferta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación"
            android:textColor="#D1D5DB"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/txtFechaOferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-12-01"
            android:textColor="#9CA3AF"
            android:textSize="12sp"
            android:layout_marginTop="6dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
