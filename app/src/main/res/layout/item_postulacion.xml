<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    card_view:cardBackgroundColor="#181828"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTituloPostulacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÃ­tulo oferta"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtEstadoPostulacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: pendiente"
            android:textColor="#CCCCCC"
            android:textSize="13sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/txtFechaPostulacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-01-01"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btnVerOferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver oferta"
            android:layout_marginTop="8dp"
            android:backgroundTint="#00BFA6"
            android:textColor="#111111"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
